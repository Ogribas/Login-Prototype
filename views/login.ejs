<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
    <script defer src="login.js"></script>
</head>
<body>
    <form action="/login" method="post">
    <div class="login-upb">
        <div class="login-form">
            <div class="login-form1">
                <div class="login-gambar">
                    <img src="upbwarnanew.gif" alt="" srcset="">
                </div>
                <div class="login-judul">
                    <p>Sistem Informasi Akademik Mahasiswa</p>
                </div>
            </div>
            <div class="login-form2">
                <% if (typeof msg !== 'undefined' && msg.length > 0) { %>
                    <p><%= msg %></p>
                  <% } else { %>
                   <p class="welcome">Selamat datang di Halaman <span style="font-style: italic; font-weight: 300;">Login</span></p>
                <% } %>
             
                
                <div class="form">
                    <input type="text" placeholder="Username" id="username" name="username">
                    <div class="password-div">
                        <input type="password" placeholder="Password" id="password"  name="password">
                        <div class="show-password">

                            <img src="/img/eye.svg" id="kuis"alt="">
                        </div>
                    </div>
                    <div style="justify-content: start;align-items: start; display: flex; flex-direction: row; gap: 2vw;">

                        <button type="submit" class="masuk">Login</button>
                        
                        <a href="/register" id="register" >Belum Register?</a>
                    </div>
                   
                </div>
            </div>
            
        </form>
        
            <div class="login-form3">
            </div>
        </div>
    </div>


