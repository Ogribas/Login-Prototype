<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
    <script defer src="register.js"></script>
</head>
<body>

    <form action="/register" method="post">
        <div class="login-upb">
            <div class="login-form">
                <div class="login-form1">
                    <div class="login-gambar">
                        <img src="upbwarnanew.gif" alt="" srcset="">
                    </div>
                    <div class="login-judul">
                        <p>Sistem Informasi Akademik Mahasiswa</p>
                    </div>
                </div>
                <div class="login-form2">
                    <% if (typeof msg !== 'undefined' && msg.length > 0) { %>
                        <p><%= msg %></p>
                      <% } else { %>
                       <p>Selamat datang di Halaman <span style="font-style: italic; font-weight: 300;">Register</span></p>
                    <% } %>
                 
                    
                    <div class="form">
                        <input type="text" placeholder="Username" id="username" name="username">
                        <input type="password" placeholder="Password" id="password1"  name="password1">
                        <div class="password-div">
                            <input type="password" placeholder="Ulang Password anda" id="password"  name="password">
                            <div class="show-password">
    
                                <img src="/img/eye.svg" id="kuis"alt="">
                            </div>
                        </div>
                        <div style="justify-content: start;align-items: start; display: flex; flex-direction: row; gap: 2vw;">
                        <button type="submit" class="masuk">Register</button>
                        <a href="/login" id="register">Sudah mendaftar akun?</a>
                        </div>


                    </div>
                </div>
            </form>
                <div class="login-form3">
                </div>
            </div>
        </div>
    
    
</body>
</html>